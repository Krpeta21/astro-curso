---
import Layout from "../../components/Layout.astro";
const posts = await Astro.glob('./posts/*.md')
import bgImage from '../../images/sad.png'
---
<Layout pageTitle="Blog de desarrollo" pageDescription="Tutoriales de desarrollo y programacion">
    <h1>Blog</h1>

    <img width="250"  src={bgImage} alt="rudeus">

    {
    posts.map(post =>{
        return <a href={post.url} class="link">{post.frontmatter.title}</a>
    })
    }
    <style>
        .link{
            background-color: wheat;
            color: black;
            text-decoration: none;
            display: block;
            margin-bottom: 4px;
        }
    </style>
</Layout>
